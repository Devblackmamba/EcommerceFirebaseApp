<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="e.pc7.ecommerceuser.Activity.Admin.AddAdvertisings">


    <ImageView
        android:id="@+id/iv_advertise_template"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:layout_width="400dp" />

    <EditText
        android:id="@+id/et_advertise_name"
        android:hint="advertise name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add_advertises"
        android:text="add advertises"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
