<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="130dp">

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/tv_no_customername"
        android:text="customer name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:layout_below="@id/tv_no_customername"
        android:id="@+id/tv_no_customernumber"
        android:text="customer name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="5"
        android:layout_margin="5dp"
        android:layout_below="@id/tv_no_customernumber"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_view_ordered_product"
            android:text="view ordered product"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="#6bfc92"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_view_customer_address"
            android:text="check address"
            android:background="#fa6645"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>