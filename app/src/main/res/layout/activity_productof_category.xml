<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.ProductofCategory">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:layout_width="200dp" />

    <EditText
        android:id="@+id/et_product_name"
        android:hint="product name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_product_prize"
        android:hint="product prize"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_product_discription"
        android:hint="product discription"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_product_discount"
        android:hint="product discount"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_product_searchkey"
        android:hint="product search key"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_add_product"
        android:layout_margin="10dp"
        android:text="add product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>